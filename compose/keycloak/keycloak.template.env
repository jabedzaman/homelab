# Database configuration
KC_DB=postgres
KC_DB_URL=jdbc:postgresql://postgres:5432/keycloak
KC_DB_USERNAME=""
KC_DB_PASSWORD=""

# Keycloak admin credentials
KC_BOOTSTRAP_ADMIN_USERNAME=""
KC_BOOTSTRAP_ADMIN_PASSWORD=""

# Modern hostname configuration (v2)
KC_HOSTNAME_URL=https://auth.jabed.dev
KC_HOSTNAME_ADMIN_URL=https://auth.jabed.dev
KEYCLOAK_FRONTEND_URL=https://auth.jabed.dev

# Proxy configuration
KC_PROXY=edge
KC_PROXY_ADDRESS_FORWARDING=true
KC_HTTP_ENABLED=true
KC_PROXY_HEADERS=xforwarded

# Health and metrics
KC_HEALTH_ENABLED=true
KC_METRICS_ENABLED=true

# Security and performance
KC_LOG_LEVEL=INFO

# Webhook
WEBHOOK_HTTP_BASE_PATH=""
WEBHOOK_HTTP_AUTH_USERNAME=""
WEBHOOK_HTTP_AUTH_PASSWORD=""
